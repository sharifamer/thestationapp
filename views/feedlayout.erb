                        <img src="images/scheduledpost.png">
                        <p>
                            Scheduled Post
                        </p>
                        <p>
                            [date]
                        </p>
                    </div>
                    <div>
                        <p>
                            [data]
                        </p>
                        <p>
                            [assigned date]
                        </p>
                    </div>
                </div>
            
            
        <!--left side bar-->
        
            <div class="sidebar">
                <div class="profstrip">
                    <a href="/twitterprofile"><div>
                        <img style="float: left; width: 60px; position: absolute; margin: 10px 2px 10px 10px;  border:2px solid #FFF; border-radius: 100%;" src="<%= idToInfoTwitter(searchTwitter.get[0]["twitter_id"].to_i, "pic") %>">
                        
                        <div style="margin-left: 65px; width:150px; padding: 10px 0px 10px 10px; background-color: #464646;">
                             <p  style="margin: 0px; color: #ffffff; padding-top: 7.5px; font-size: 21px;">
                                  <%= idToInfoTwitter(searchTwitter.get[0]["twitter_id"].to_i, "name") %>
