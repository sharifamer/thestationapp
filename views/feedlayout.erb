                            <p style="margin: 0px; color: #ffffff; padding-bottom: 12.5px; font-size:14px;">
                                @<%= idToInfoTwitter(searchTwitter.get[0]["twitter_id"].to_i, "screen_name") %>
                            </p>
                        </div>
                    </div></a>
                </div>
            
            
            
            <!--left side bar tabs-->
            
                <div style="margin-top:55px;">
                                <a href="" class="links">
                                    <div class="divsize">
